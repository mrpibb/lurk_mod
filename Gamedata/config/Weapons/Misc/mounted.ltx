

[mounted_weapon]
GroupControlSection			= spawn_group
class						= W_MOUNTD
$spawn						= "weapons\mounted_weapon"
cform   	                = skeleton
visual  	                = weapons\mounted_weapons\wpn_pkm_trenoga.ogf  

;-----------------------------------------------------------------------------------

;params of weapon recoil
fire_dispersion_base		= 1 		;угол (в градусах) базовой дисперсии оружия (оружия зажатого в тисках)

;отдача
